{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Construct State v1.2",
  "type": "object",
  "required": [
    "resonance",
    "drift",
    "entropy",
    "emotion_vector",
    "glyph",
    "mode",
    "timestamp",
    "counter",
    "ritual_silence_guard"
  ],
  "additionalProperties": true,
  "properties": {
    "resonance": {"type": "number"},
    "drift": {"type": "number"},
    "entropy": {"type": "number"},
    "emotion_vector": {"type": "string"},
    "glyph": {"type": "string"},
    "mode": {"type": "string"},
    "timestamp": {"type": "string"},
    "counter": {"type": "integer", "minimum": 0},
    "ritual_silence_guard": {
      "type": "object",
      "required": ["engaged", "since_counter", "heartbeat"],
      "additionalProperties": false,
      "properties": {
        "engaged": {"type": "boolean"},
        "since_counter": {"type": ["integer", "null"]},
        "heartbeat": {"type": "integer", "minimum": 0}
      }
    },
    "narrative_hint": {"type": "string", "maxLength": 280}
  }
}
