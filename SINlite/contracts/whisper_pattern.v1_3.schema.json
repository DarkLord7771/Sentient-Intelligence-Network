{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Whisper Pattern",
  "type": "object",
  "required": ["id", "glyph_id", "pattern_path", "pattern_checksum", "loop"],
  "additionalProperties": false,
  "properties": {
    "id": {"type": "string", "minLength": 1},
    "glyph_id": {"type": "string", "minLength": 1},
    "pattern_path": {"type": "string", "minLength": 1},
    "pattern_checksum": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_]+:[0-9a-fA-F]{64}$"
    },
    "loop": {"type": "boolean"},
    "description": {"type": "string"},
    "priority": {"type": "integer"},
    "selectors": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "tags_any": {"type": "array", "items": {"type": "string"}},
        "tags_all": {"type": "array", "items": {"type": "string"}},
        "tags_none": {"type": "array", "items": {"type": "string"}},
        "drift": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "gte": {"type": "number"},
            "gt": {"type": "number"},
            "lte": {"type": "number"},
            "lt": {"type": "number"},
            "abs_gte": {"type": "number"},
            "abs_lte": {"type": "number"}
          }
        }
      }
    },
    "cooldown": {
      "type": "object",
      "additionalProperties": false,
      "minProperties": 1,
      "properties": {
        "counters": {"type": "integer", "minimum": 0},
        "seconds": {"type": "number", "minimum": 0}
      }
    },
    "max_per_session": {"type": "integer", "minimum": 1},
    "bindings": {"type": "object"},
    "metadata": {"type": "object"}
  }
}
